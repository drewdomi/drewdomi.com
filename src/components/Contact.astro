---
import * as m from "@/paraglide/messages";

import ContactLink from "./ContactLink.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section id="contact">
  <SectionTitle title={m.linkLabelContact()} />
  <div class="pl-4 mb-[50px]">
    <ContactLink
      label="GitHub: /drewdomi"
      leftIcon="bi:github"
      href="https://github.com/drewdomi"
    />
    <ContactLink
      label="LinkedIn: /in/drewdomi"
      leftIcon="bi:linkedin"
      href="https://linkedin.com/in/drewdomi"
    />
    <ContactLink
      label="Email: contato@drewdomi.com"
      label=`Email: ${m.contactEmail()}`
      leftIcon="bi:envelope-fill"
      href=`mailto:${m.contactEmail()}`
    />
    <ContactLink
      label={m.contactGpg()}
      leftIcon="bi:key-fill"
      href="/public_gpg.txt"
    />
  </div>
</section>

---
import type { CollectionEntry } from "astro:content";
import { Icon } from 'astro-icon'

import Layout from "../layouts/Layout.astro";

type Props = CollectionEntry<"projects">["data"];
const { title, desc, image, altImage, releaseDate, site, stacks } = Astro.props;
---

<Layout title={title} desc={desc}>
  <section>
    <div class="pt-2">
      <img
        class="rounded-3xl shadow-md"
        width="100%"
        src={image}
        alt={altImage}
      />
    </div>
    <div class="text-md breadcrumbs mt-3 mb-2">
      <ul>
        <li><a class="text-secondary gap-0.5" href="/projects">Projetos</a></li>
        <li class="text-2xl font-title font-medium items-center">
          {title}
          <span class="badge badge-info ml-3">{releaseDate}</span>
        </li>
      </ul>
    </div>
    <div class="pb-2">
      <p class="mb-2 gap-2 flex">
        <span class="badge badge-success ml-3 mr-1">Site</span>
        <a href={site} target="_blank" class="link flex items-center gap-2">
          {site} <Icon name="bi:box-arrow-up-right" class="w-[14px]"/>
        </a>
      </p>
      <p class="mb-2">
        <span class="badge badge-success ml-3 mr-1">Stacks</span>
        {stacks.join(', ')}
      </p>
    </div>

    <slot />
  </section>
</Layout>
